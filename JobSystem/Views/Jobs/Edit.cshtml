
@model JobSystem.Models.Job

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm("Edit", "Jobs"))
{
    <form>
        <div class="form-group">
            @Html.LabelFor(m => m.Work)
            @Html.TextBoxFor(m => m.Work, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Field)
            @Html.TextBoxFor(m => m.Field, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Start)
            @Html.TextBoxFor(m => m.Start, "{0:yyyy-MM-d}", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Locality)
            @Html.TextBoxFor(m => m.Locality, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Salary)
            @Html.TextBoxFor(m => m.Salary, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Duration)
            @Html.TextBoxFor(m => m.Duration, new { @class = "form-control" })
        </div>
        <div>
            <button type="submit" class="btn btn-default">Save</button>
        </div>
    </form>
}